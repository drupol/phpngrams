{
    "name": "drupol/phpngrams",
    "description": "Get N-Grams from strings and/or arrays.",
    "keywords": ["n-grams", "ngram", "ngrams"],
    "type": "library",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "email": "pol.dellaiera@protonmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "drupol\\phpngrams\\": "src/"
        }
    },
    "require": {
        "php": ">= 7.0",
        "drupol/phpermutations": "^1"
    },
    "require-dev": {
        "drupol/php-conventions": "^1",
        "monolog/monolog": "^1.0",
        "php-http/guzzle6-adapter": "^1.1",
        "scrutinizer/ocular": "^1.3"
    },
    "scripts": {
        "apigen": "./vendor/bin/apigen generate src --destination build/docs",
        "phpspec": "./vendor/bin/phpspec run",
        "grumphp": "./vendor/bin/grumphp run",
        "scrutinizer": "./vendor/bin/ocular code-coverage:upload --format=php-clover build/coverage.xml"
    },
    "extra": {
        "grumphp": {
            "config-default-path": "vendor/drupol/php-conventions/config/grumphp.yml"
        }
    }
}
